<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.ne.naokiur.kotlin_android_challenge.FileIOActivity">

    <TextView
        android:id="@+id/label_save_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input some statement."
        app:layout_constraintTop_toTopOf="@+id/text_save_target" />

    <EditText
        android:id="@+id/text_save_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/label_save_target" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save File from edit text content."
        app:layout_constraintTop_toBottomOf="@+id/text_save_target" />
</android.support.constraint.ConstraintLayout>
